<h2>Listing users</h2>

<table class="datatable">
  <tr class="datatable">
    <th class="datatable"><%= "Email/Login" %></th>
    <th class="datatable"><%= "Created" %></th>
    <th class="datatable"><%= "Last Updated" %></th>
    <th colspan="3" class="datatable"><%= "Account actions" %></th>
  </tr>
  
<% for user in @users %>
  <tr class="datatable">
    <td class="datatable"><%=h user.email %></td>
    <td class="datatable"><%=h user.created_at.strftime("%d %b %Y %H:%M:%S") %></td>
    <td class="datatable"><%=h user.updated_at.strftime("%d %b %Y %H:%M:%S") %></td>
    <td class="datatable"><%= link_to 'Change Password', :action => 'edit', :id => user %></td>
    <td class="datatable"><%= link_to 'Change Roles', :action => 'roles', :id => user %></td>
    <td class="datatable"><%= link_to 'Delete account', { :action => 'destroy', :id => user }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>
<%= will_paginate @users %>
<table>
  <tr>
    <td><%=button_to('Add User',:action=>'new') %></td>
  </tr>
</table>

<%= link_to 'New user', :action => 'new' if user.has_static_permission?('add_user') %>
